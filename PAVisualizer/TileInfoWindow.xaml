<Window x:Class="PAVisualizer.TileInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAVisualizer"
        mc:Ignorable="d"
        Title="TileInfoWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Label x:Name="PositionLabel"/>
            <Label x:Name="TerrainLabel"/>
            <Label x:Name="StructureLabel"/>
            <Label x:Name="PopulationLabel"/>
            <ComboBox x:Name="LoadedPopulationComboBox"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <Label x:Name="LoadedEntityLabel"/>
        </ScrollViewer>
    </Grid>
</Window>
